@model IEnumerable<WebApplication6.Models.FileDetailsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <div class="section-title">
                        <h3>Search</h3>
                    </div>
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                    {
                    <div class="col-md-8">
                        @Html.TextBox("searching") <input value="Search" type="submit" style="width:200px" class="form-control" />
                    </div>
                    }
                </div>
                </div>
            </div>
    </section>
    
    <section id="portfolio">
        <div class="container">
            <div class="row">                                                                         
               @foreach (var item in Model)
                {
                <div class="col-md-4 col-sm-6">
                    <a href="single-project.html">
                        <div class="portfolio-thumb">
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" class="img-responsive" alt="Portfolio" />
                            <div class="portfolio-overlay">
                                <div class="portfolio-item">
                                    <h3>@Html.DisplayFor(modelItem => item.EbookName)</h3>
                                    <h5>@Html.ActionLink("Download", "DownloadFile", new { id = item.Id })</h5>
                                </div>
                            </div>

                        </div>
                    </a>
                </div>
                }                             
            </div>
        </div>
    </section>
</body>
